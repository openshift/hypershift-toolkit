{
  "issuer": "https://{{ .OAuthRoute }}",
  "authorization_endpoint": "https://{{ .OAuthRoute }}/oauth/authorize",
  "token_endpoint": "https://{{ .OAuthRoute }}/oauth/token",
  "scopes_supported": [
    "user:check-access",
    "user:full",
    "user:info",
    "user:list-projects",
    "user:list-scoped-projects"
  ],
  "response_types_supported": [
    "code",
    "token"
  ],
  "grant_types_supported": [
    "authorization_code",
    "implicit"
  ],
  "code_challenge_methods_supported": [
    "plain",
    "S256"
  ]
}
